<div id="pyramid-1" class="list colspan-21">
  <div class="col-21 no-border left">
    <h3>Movimento da pirâmide acumulado até o ciclo <%= @growth_profiles[3].gregorian_cycle %></h3>
  </div>

  <md-button class="md-raised md-ink-ripple no-border" ng-click="copyDataFromLastCycle('accumulated_pyramid')">Copiar dados do ciclo anterior</md-button>

  <%= (1..8).each do |l| %>
    <div class="col-21 list">
      <div class="col-<%= 8 - l %> no-border"></div>
      <div class="col-1 no-border">L<%= 9 - l %></div>
      <div class="col-<%= l + 2 %>"><input disabled ng-model="growth_profiles[3].book<%= l == 6 ? '3grade1' : 9 - l %>"></div>
      <div class="col-<%= l + 2 %>"><input type="number" ng-change="changeFormState()" ng-model="growth_profiles[3].accumulated_pyramid.studyingBook<%= l %>"></div>
      <div class="col-<%= 8 - l %> no-border"></div>
    </div>
  <% end %>

  <div class="col-21 list">
    <div class="col-1 no-border"></div>
    <div class="col-10 no-border with-tooltip">
      Concluído
      <md-tooltip class="md-subhead" layout-padding md-direction="bottom">Indica o número total atual acumulado de pessoas que já concluíram cada um dos livros da sequência (dados da Tabela 1).</md-tooltip>
    </div>
    <div class="col-10 no-border with-tooltip">
      Estudando
      <md-tooltip class="md-subhead" layout-padding md-direction="bottom">Indica o número total de pessoas que estudam atualmente os livros.</md-tooltip>
    </div>
  </div>
</div>
